# Start a container
xhost +local:root
sudo docker run -it     --env="DISPLAY"     --env="QT_X11_NO_MITSHM=1"     --volume="/tmp/.X11-unix:/tmp/.X11-unix:rw" --runtime=nvidia  --name "panda_sim0"   panda_sim     bash
xhost -local:root

# Add additional shell
sudo docker exec -it panda_sim0 bash

# Restart container
sudo docker restart panda_sim0

# Stop container
sudo docker stop panda_sim0

# Clean up docker
sudo docker system prune
